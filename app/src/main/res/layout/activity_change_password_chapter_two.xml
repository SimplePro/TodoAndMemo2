<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ChangePasswordChapterTwo">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/left_arrow"
        android:id="@+id/backIntentImageViewChapterTwo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/changePasswordTitleTextViewChapterTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:fontFamily="@font/mapo"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        />

    <EditText
        android:maxLines="1"
        android:maxLength="15"
        android:inputType="textPassword"
        android:textColor="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/changePasswordTitleTextViewChapterTwo"
        android:id="@+id/changePasswordCheckEditTextChapterTwo"
        android:hint="새로운 비밀번호 / 7 ~ 15자"
        android:textStyle="bold"
        android:fontFamily="@font/mapo"
        android:layout_marginHorizontal="30dp"
        android:textSize="20dp"
        android:layout_marginTop="150dp"/>

    <Button
        app:layout_constraintTop_toBottomOf="@id/changePasswordCheckEditTextChapterTwo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:elevation="10dp"
        android:id="@+id/changePasswordEnterButtonChapterTwo"
        android:background="@drawable/login_button_background"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:text="비밀번호 변경"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/mapo"
        android:textSize="30dp"
        android:layout_marginTop="180dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>